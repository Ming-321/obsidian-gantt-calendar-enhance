{
	"name": "obsidian-gantt-calendar",
	"version": "2.0.0",
	"description": "A personal task management plugin with Gantt-style week view, month calendar and task list. JSON-based storage with optional GitHub sync.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
